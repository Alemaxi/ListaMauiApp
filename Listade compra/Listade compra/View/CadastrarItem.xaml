<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Listade_compra.View.CadastrarItem"
             Title="CadastrarItem">
    <VerticalStackLayout
        Padding="10, 20, 10, 10"
        Spacing="30">

        <Entry 
            Placeholder="Digite o nome do item"
            Keyboard="Plain"
            TextChanged="NomeChanged">
        </Entry>

        <Button 
            Text="Cadastrar"
            Clicked="CadastrarClicked"
            >
            
        </Button>

    </VerticalStackLayout>
</ContentPage>